@model List<CategoryModel> 

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class=" btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thaead>
    <tr>
        <th>
                Display Order
            
        </th>
        <th>
                Category Name
        </th>
        <th></th>
    </tr>
    </thaead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td> @obj.DisplayOrder</td>
                <td> @obj.Name</td>
                <td>
                    <div class="w-25 btn-group"  role="group"> 
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>